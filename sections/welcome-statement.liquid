<style>
    .two-column-text-section {
      display: flex;
      justify-content: space-between;
      padding: 50px 8%;
      background-color: #f5f5f5;
    }
  
    .two-column-text-section__column {
      flex-basis: 48%;
    }
  
    .two-column-text-section__heading {
      font-size: 14px;
      font-weight: bold;
      margin-bottom: 20px;
      letter-spacing: 1px;
      font-family: "Adineue PRO",Helvetica,Arial,sans-serif;
    }
  
    .two-column-text-section__text {
      font-size: 14px;
      line-height: 1.6;
      color: #333;
      font-family: "Adineue PRO",Helvetica,Arial,sans-serif;
    }
  
    @media screen and (max-width: 768px) {
      .two-column-text-section {
        flex-direction: column;
      }
  
      .two-column-text-section__column {
        flex-basis: 100%;
        margin-bottom: 30px;
      }
    }
  </style>
  
  <div class="two-column-text-section">
    <div class="two-column-text-section__column">
      <h2 class="two-column-text-section__heading">{{ section.settings.heading_1 }}</h2>
      <div class="two-column-text-section__text">
        {{ section.settings.text_1 }}
      </div>
    </div>
    <div class="two-column-text-section__column">
      <h2 class="two-column-text-section__heading">{{ section.settings.heading_2 }}</h2>
      <div class="two-column-text-section__text">
        {{ section.settings.text_2 }}
      </div>
    </div>
  </div>
  
